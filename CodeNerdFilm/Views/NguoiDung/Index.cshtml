@model PagedList.IPagedList<CodeNerdFilm.Models.Film>
@using CodeNerdFilm.Models;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser_Logged.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a href="@Url.Action("ChiTietFilm", "NguoiDung", new { id = item.Id } )" class="">
                <div class="box-content">
                    <div class="box-body">
                        <img src="@item.Hinh" alt="hinh thumbnail" width="300" height="350" />
                    </div>
                    <div class="box-footer clearfix">
                        <ul class="list-item">
                            <li>
                                <span>@item.Tieu_De</span>
                            </li>
                            <li>
                                <span>@item.Ten</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div>
    <div style="margin-top: 16px">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </div>
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</div>

<style>
    .row a{
        text-decoration: none;
        cursor: pointer;
    }
    .box-content {
        border: 2px solid #000;
        background-color: #000;
    }
    .box-body img{
        width: 100%;
        height: 200px;
    }
    .list-item {
        list-style-type: none;
        padding-left: 20px;
        margin-bottom: 0;
    }
        .list-item li {
            font-size: 12px;
            line-height: normal;
        }
            .list-item li:first-child {
                text-transform: uppercase;
                color: #44e2ff;
                font-weight: 700;
                margin-top: 8px;
            }
            .list-item li:last-child {
                color: #ccc;
                margin: 8px 0 8px 0;
            }
            .list-item li:hover {
                color: #dacb46;
            }
</style>
