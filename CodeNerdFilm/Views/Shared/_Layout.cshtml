@using CodeNerdFilm.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CODE NERD", "Index", "Home", new { area = "" }, new { @class = "navbar-brand header-title" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="mega-menu-1">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="nav-item_type button">
                        <a style="cursor: pointer">Thể Loại</a>
                        <div class="list-type sub-container">
                            <ul class="sub">
                                <li>@Html.ActionLink("Kinh dị", "KinhDi", "NguoiDung")</li>
                                <li>@Html.ActionLink("Hành động", "HanhDong", "NguoiDung")</li>
                                <li>@Html.ActionLink("Viễn tưởng", "VienTuong", "NguoiDung")</li>
                                <li>@Html.ActionLink("Hoạt hình", "HoatHinh", "NguoiDung")</li>
                                <li>@Html.ActionLink("Cổ trang", "CoTrang", "NguoiDung")</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item_type button">
                        <a style="cursor: pointer">Quốc Gia</a>
                        <div class="list-type sub-container">
                            <ul class="sub">
                                <li>@Html.ActionLink("Trung Quốc", "TrungQuoc", "NguoiDung")</li>
                                <li>@Html.ActionLink("Nhật Bản", "NhatBan", "NguoiDung")</li>
                                <li>@Html.ActionLink("Thái Lan", "QGThaiLan", "NguoiDung")</li>
                                <li>@Html.ActionLink("Anh", "NhatBan", "NguoiDung")</li>
                                <li>@Html.ActionLink("Mỹ", "QGMy", "NguoiDung")</li>
                            </ul>
                        </div>
                    </li>
                    <li>@Html.ActionLink("Phim lẻ", "FilmLe", "Home")</li>
                    <li>@Html.ActionLink("Trailer", "Trailer", "Home")</li>
                </ul>
                <a href="@Url.Action("Register","NguoiDung")" class="btn btn-default">Đăng ký</a>
                <a href="@Url.Action("Login","NguoiDung")" class="btn btn-default">Đăng nhập</a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color: #9d9d9d">&copy; @DateTime.Now.Year - Code Nerd Team</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    .header-title {
        text-shadow: 0 0 5px #00FFFF, 0 0 15px #00FFFF, 0 0 20px #00FFFF, 0 0 40px #00FFFF, 0 0 60px #00FFFF, 0 0 75px #00FFFF, 0 0 98px #00FFFF;
        color: #FFFFFF;
        font-family: cursive;
        animation: blink 1s infinite;
        -webkit-animation: blink 2s infinite;
    }

    @@-webkit-keyframes blink {
        10%, 20%, 30% {
            color: #111;
            text-shadow: none;
        }

        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
            text-shadow: 0 0 5px #00FFFF, 0 0 15px #00FFFF, 0 0 20px #00FFFF, 0 0 40px #00FFFF, 0 0 60px #00FFFF, 0 0 75px #00FFFF, 0 0 98px #00FFFF;
            color: #FFFFFF;
        }
    }

    a.btn.btn-default {
        float: right;
        padding-top: 15px;
        padding-bottom: 15px;
        background-color: #222222;
        color: #92948a;
        border: none;
    }

        a.btn.btn-default:hover {
            color: #fff;
            background-color: transparent;
        }

    .nav-item_type {
        position: relative;
    }

    .button {
        padding: 15px;
        text-decoration: none;
        color: #92948a;
        float: right;
        cursor: pointer;
    }

    #mega-menu-1 {
        list-style: none;
        position: relative;
        padding: 0;
        margin: 0;
        height: auto;
        position: relative;
        float: left;
    }

        #mega-menu-1 li.mega-hover a, #mega-menu-1 li a:hover {
            color: #dacb46;
        }

        #mega-menu-1 li a {
            float: left;
            display: block;
            padding: 11px 15px;
            margin-top: 3px;
            text-decoration: none;
        }

    .list-type {
        position: absolute;
        margin-right: auto;
        margin-left: auto;
        z-index: 1;
        display: none;
        background-color: transparent;
    }

        .list-type:before, .list-type:after {
            position: absolute;
            display: table;
            content: " ";
            display: block;
            top: -15px;
            width: 100%;
            height: 20px;
        }

    .nav-item_type:hover .list-type {
        display: block;
        position: absolute;
        top: 48px;
        z-index: 1000;
        min-width: 520px;
    }

    #mega-menu-1 li .sub {
        background: rgba(25,25,25,.9);
        padding: 5px !important;
        border: 1px solid #79777A;
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
    }


    ul ul, ol ul, ul ol, ol ol {
        margin-bottom: 0;
    }

    ul, ol {
        margin-top: 0;
        margin-bottom: 10px;
    }

    ol, ul {
        overflow-wrap: break-word;
    }

    #mega-menu-1 li .sub li {
        list-style: none;
        float: none;
        width: 165px !important;
        display: inline-block;
    }

    #mega-menu-1 li {
        float: left;
        margin: 0;
        padding: 0;
        cursor: default;
    }

        #mega-menu-1 li .sub a {
            color: #fff;
            padding: 7px 10px;
            display: block;
            text-transform: none;
            font-size: 13px;
        }

    ul.sub > li:hover {
        background: #292929;
    }
</style>
