@model PagedList.IPagedList<CodeNerd_Film.Models.The_Loai>
@using PagedList.Mvc;

@{
    ViewBag.Title = "TheLoai";
    Layout = "~/Views/Shared/_LayoutAdmin_Logged.cshtml";
}

<h2 style="text-transform: uppercase"><strong>Thể loại film</strong></h2>

<p>
    @Html.ActionLink("THÊM MỚI", "ThemTheLoaiFilm", "Admin")
</p>
<table class="table" border="1">
    <tr>
        <th >
            Mã thể loại
        </th>
        <th>
            Tên thể loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.ActionLink("Sửa", "ChinhSuaTheLoaiFilm", new { id = item.Id }) |
                @Html.ActionLink("Xoá", "XoaTheLoaiFilm", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    Trang @(Model.PageNumber>Model.PageCount?3:Model.PageNumber) /@Model.PageCount
</div>
<div class="Menutrang">
    @Html.PagedListPager(Model, page => Url.Action("TheLoai", new { page = page }))
</div>

