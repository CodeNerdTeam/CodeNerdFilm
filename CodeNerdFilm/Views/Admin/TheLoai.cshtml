@model PagedList.IPagedList<CodeNerdFilm.Models.The_Loai>
@using PagedList.Mvc;

@{
    ViewBag.Title = "TheLoai";
    Layout = "~/Views/Shared/_LayoutAdmin_Logged.cshtml";
}

<h2 style="text-transform: uppercase"><strong>Thể loại film</strong></h2>

<p>
    @Html.ActionLink("THÊM MỚI", "ThemTheLoaiFilm", "Admin")
</p>

@using (Html.BeginForm("TheLoai", "Admin", FormMethod.Get))
{
    @Html.TextBox("search")
    <input type="submit" value="Search" />
}

@if (Model.Count() == 0)
{
    <script>

            setTimeout(function () {
                alert("Không có dữ liệu");
            },100)
    </script>
}
<br />
<table class="table" border="1">
    <tr>
        <th>
            Mã thể loại
        </th>
        <th>
            Tên thể loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.ActionLink("Sửa", "ChinhSuaTheLoaiFilm", new { id = item.Id }) |
                @Html.ActionLink("Xoá", "XoaTheLoaiFilm", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    Trang @(Model.PageNumber>Model.PageCount?0:Model.PageNumber) /@Model.PageCount
</div>
<div class="Menutrang">
    @Html.PagedListPager(Model, page => Url.Action("TheLoai", new { page = page }))
</div>

